set nocompatible

set showcmd
set wildmenu

set backspace=2
set number

set autoindent
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4
set linebreak
set wrap

set encoding=utf8

set nobackup
set nowb
set noswapfile

syntax off
set background=dark
let g:solarized_bold=0
colorscheme default

set showtabline=2
map <C-t><up> :tabr<cr>
map <C-t><down> :tabl<cr>
map <C-t><left> :tabp<cr>
map <C-t><right> :tabn<cr>
